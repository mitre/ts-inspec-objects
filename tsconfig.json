{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "ES2022",
    "types": ["node"]
  },
  "include": [
    "index.ts",
    "src/**/*",
    "types/*"
  ]
}
