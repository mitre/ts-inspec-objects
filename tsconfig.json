{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],

    "module": "esnext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    "rootDir": "src",
    "outDir": "lib",

    "strict": true,
    "noImplicitAny": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,

    "incremental": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,

    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "types/*"
  ]
}
